<section id="LT--{{ section.id }}" class="BM_section bm-templates_testimonials {{ section.settings.css_class }}">
  {%- if section.settings.link_url != blank -%}
      <a href="{{ section.settings.link_url }}">
  {%- endif -%}
  <div class="luna-templates__marquee-bar">
    <span class="luna-templates__marquee-bar-content">
        {%- for block in section.blocks -%}
          <span id="block-{{ block.id }}" class="luna-templates__marquee-item-left"  {{ block.shopify_attributes }}>
            {%- if block.settings.text != blank -%}
              {{- block.settings.text -}}
            {%- endif -%}
          </span>
          <span id="block-{{ block.id }}" class="luna-templates__marquee-item-right"  {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 50 | image_tag }}
            {%- endif -%}
          </span>
        {%- endfor -%}
    </span>
  </div>
</section>


{%- style -%}
  #LT--{{ section.id }} {
    background: {{ section.settings.color_bg }};
    border-top: {{ section.settings.border_width }}px solid {{ section.settings.color_border }};
    border-bottom: {{ section.settings.border_width }}px solid {{ section.settings.color_border }};
    color: {{ section.settings.color_text }};
    padding-top: {{ section.settings.padding }}px;
    padding-bottom: {{ section.settings.padding }}px;
    position: relative;
    overflow: hidden;
  }

  #LT--{{ section.id }} .luna-templates__marquee-bar {
    display: grid | inline-grid;
    flex-wrap: nowrap;
    white-space: nowrap;
    height: 100%;
    min-width: 100%;
  }

  #LT--{{ section.id }} .luna-templates__marquee-item-left {
    align-items: stretch;
    display: grid;
  }

  #LT--{{ section.id }} .luna-templates__marquee-bar-content {
    animation: {% if section.settings.direction == "reverse" %}lt-marquee-right{% else %}lt-marquee{% endif %} {{ section.settings.speed }}s linear infinite;
    display: flex;
  }

  #LT--{{ section.id }} p {
    margin: 0;
    color: {{ section.settings.color_text }};
    font-size: {{ section.settings.text_size }}px;
    padding-left: 20px;
    padding-right: {{ section.settings.item_padding }}px;
    line-height: 1;
  }

  #LT--{{ section.id }} a {
    color: {{ section.settings.color_text }};
  }

  #LT--{{ section.id }} a {
    text-decoration: none;
  }

  #LT--{{ section.id }} .luna-templates__marquee-item img {
    display: inline-block;
    height: auto;
  }
{% endstyle %}

